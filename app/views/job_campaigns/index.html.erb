<div class="container" id="company-all-campaigns">
  <div class="row d-flex justify-content-center text-center" style="padding-top: 30px;"><h1>Your Campaign</h1></div>
  <div class="row d-flex control_button">
    <div class="col d-flex justify-content-center"> 
      <%= link_to "Add Campaign", new_job_campaign_path, class: "btn btn-secondary" %>
    </div>

  </div>
  <div class="row" style = "padding-top:30px">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Camp #</th>
          <th>Title</th>
          <th>Salary</th>
          <th>Work Hours</th>
          <th>Location</th>
          <th>Open</th>
          <th>Preview</th>
          <th>Edit</th>
          <th>Students</th>
          <th>Close Campaign</th>
        </tr>
      </thead>
      <% @job_campaigns.each do |jc| %>
      <tbody>
        <tr>
          <td><%= jc.id %></td>
          <td class="text-truncate" style="max-width: 250px"><%= jc.title %></td>
          <td><%= jc.salary %></td>
          <td><%= jc.work_hour_per_week %></td>
          <td><%= jc.location %></td>
          <td class="text-capitalize"><%= jc.is_open %></td>
          <td>
            <%= link_to "Preview", preview_campaign_path(jc), class: "btn btn-primary mr-1" %>
          </td>
          <td>
            <%= link_to "Edit", edit_job_campaign_path(jc), class: "btn btn-primary mr-1" %>
          </td>
          <td>
            <%= link_to "View", match_students_job_campaign_path(jc), class: "btn btn-primary mr-1" %>
          </td>
          <td><a href="#">Close</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>