<div class="container mt-4" id="company-preview-campaign">
  <div class="row d-flex justify-content-center text-center">
    <h2>
      <strong><%= @job_campaign.title %></strong>
    </h2>
  </div>
  <div class="row d-flex justify-content-center text-center">
      <h3>
        <%= link_to company_profile_path(@job_campaign.company), class: "text-decoration-none" do %>  
          <%= @job_campaign.company.name %>
        <% end %>
      </h3>
  </div>
  <div class="row d-flex justify-content-center">
      <div class="avatar">
        <% if @job_campaign.company.logo.attached? %>
          <%= image_tag @job_campaign.company.logo.variant(resize_to_fill: [200, 200]) %>
        <% else %>
          <%= image_tag "default-company-logo.png", style:"width:200px" %>
        <% end %>
      </div>
  </div>
  <div class="row slash d-flex justify-content-center text-center">
      <h2>Job Basic Info</h2>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <p>Salary:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <%= @job_campaign.salary %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Work Hours:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <%= @job_campaign.work_hour_per_week %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Required GPA:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      >= <%= @job_campaign.gpa %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Location:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <%= @job_campaign.location %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Quantity:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <%= @job_campaign.quantity %> people
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Language:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <%= @languages.join(", ") %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Description:</p>
    </div>
    <div class="col-sm-10 font-weight-bold">
      <p>
        <%= @job_campaign.description %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Skill Level:</p>
    </div>
    <div class="col-sm-10 font-weight-bold text-capitalize">
      <%= @job_campaign.skill_level %>
    </div>
  </div>
  <div class="row slash d-flex justify-content-center text-center">
      <h2>Certification Required</h2>
  </div>
  <div class="row">
    <div class="col-sm-2">
        <p>Certifications:</p>
    </div>
    <div class="col-sm-10">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Cert</th>
            <th>Vendor</th>
          </tr>
        </thead>
        <% @certifications.each do |cert| %>
        <tbody>
          <tr>
            <td><%= cert.certification.name %></td>
            <td><%= cert.certification.vendor %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row slash d-flex justify-content-center text-center">
      <h2>Skill Required</h2>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p>Technical Skills:</p>
    </div>
    <div class="col-sm-10">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Skill</th>
            <th>Priority</th>
            <th>Level</th>
          </tr>
        </thead>
        <% @tech_skills.each do |tech| %>
        <tbody>
          <tr>
            <td><%= tech.tech_skill.name %></td>
            <td class="text-capitalize"><%= tech.priority %></td>
            <td class="text-capitalize"><%= tech.level %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>