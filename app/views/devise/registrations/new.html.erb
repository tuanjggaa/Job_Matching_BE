<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="container" id="registration-new">
    <div class="row d-flex justify-content-center logo">
      <%= image_tag "match.png", style: "width: 10%" %>
    </div>

    <div class="row title d-flex justify-content-center">
      <p>Make the most of your professional life</p>
    </div>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: false,
                  placeholder: "Enter email" %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "Enter password" %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "Confirm password" %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Agree & Join", class: "btn btn-primary" %>
    </div>

    <div class="row d-flex justify-content-center sign_in">
      Already have an account? &thinsp;
      <%= link_to "Sign in", new_user_session_path %>
    </div>
  </div>

<% end %>