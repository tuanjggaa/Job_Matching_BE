<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="container" id="password-new">
    <div class="row d-flex justify-content-center logo">
      <%= image_tag "match.png", style: "width: 10%" %>
    </div>
    <div class="row find_account_heading d-flex justify-content-center">
      <p>First, let's find your account</p>
    </div>
    <div class="row sub_find_account_heading justify-content-center d-flex">
      <p>Please enter your email address</p>
    </div>
    <div class="row d-flex justify-content-center form_container">
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-secondary" %>
    </div>
  </div>
  
<% end %>