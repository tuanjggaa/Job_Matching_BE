<div class="container" id="admin-manage-languages">
  <div class="row d-flex justify-content-center text-center">
      <h1>ALL CATEGORY TECH SKILLS</h1>
  </div>
  <div class="row search">
      <div class="col-2"></div>
      <div class="col-8">
          <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Search">
              <div class="input-group-append">
                <button class="btn btn-success" type="submit">Go</button>
              </div>
          </div>
      </div>
      <div class="col-2"></div>
  </div>
  <div class="row d-flex control_button">
    <div class="col d-flex justify-content-center">
      <%= link_to "All Tech Skills", tech_skills_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "All Categories", category_tech_skills_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "Add New Tech Skill", new_tech_skill_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "Add New Category", new_category_tech_skill_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="row table-responsive">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Cate #</th>
          <th>Name</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <% @category_tech_skills.each do |cate| %>
      <tbody>
        <tr>
          <td><%= cate.id %></td>
          <td><%= cate.name %></td>
          <td class="text-truncate" style="max-width: 200px"><%= cate.description %></td>
          <td>
            <%= link_to "Edit", edit_category_tech_skill_path(cate), class: "btn btn-primary mr-1" %>
            <%= link_to "Delete", category_tech_skill_path(cate), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr>      
      </tbody>
      <% end %>
    </table>
  </div>
</div>