<div class="container" id="student-preview-cv">
  <div class="row d-flex justify-content-center text-center">
      <h1><%= @student.name %></h1>
  </div>
  <div class="row d-flex justify-content-center">
      <div class="avatar">
        <% if @student.avatar.attached? %>
          <%= image_tag @student.avatar.variant(resize_to_fill: [200, 200]) %>
        <% else %>
          <%= image_tag "default-student-avatar.png", style:"width:200px" %>
        <% end %>
      </div>
  </div>
  <div class="row">
      <div class="slash d-flex justify-content-center text-center">
          <h2>Basic information</h2>
      </div>
  </div>
  <div class="row d-flex">
          <div class="col-sm-2 border_right" style="text-align: left;">
              <p>School:</p>
          </div>
          <div class="col-sm-10" style="text-align: center;">
              <p><%= @student.school %></p>
          </div>
  </div>
  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Year:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.school_year %></p>
      </div>
  </div>
  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Self Information:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.information %></p>
      </div>
  </div>
  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Soft Skills:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.soft_skill_description %></p>
      </div>
  </div>
  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>GPA:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.gpa %></p>
      </div>
  </div>

  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Location:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.location %></p>
      </div>
  </div>

  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Expected_Salary:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.expected_salary %></p>
      </div>
  </div>

  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Working Exp:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.working_experience %></p>
      </div>
  </div>

  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Working Day Per Week:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @student.day_per_week %></p>
      </div>
  </div>
  <div class="row d-flex">
      <div class="col-sm-2 border_right" style="text-align: left;">
          <p>Language:</p>
      </div>
      <div class="col-sm-10" style="text-align: center;">
          <p><%= @languages.join(", ") %></p>
      </div>
      
  </div>
  <div class="row">
      <div class="slash d-flex justify-content-center text-center">
          <h2>Technical Skills</h2>
      </div>
  </div>

  <div class="row d-flex">
    <div class="col-sm-2 border_right" style="text-align: left;">
      <p>Skills:</p>
    </div>
    <div class="col-sm-10" style="text-align: center;">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Skill</th>
            <th>Level</th>
          </tr>
        </thead>
        <% @tech_skills.each do |tech| %>
        <tbody>
          <tr>
            <td><%= tech.tech_skill.name %></td>
            <td><%= tech.level %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div> 
  </div>

  <div class="row">
    <div class="slash d-flex justify-content-center text-center">
      <h2>Certification</h2>
    </div>
  </div>
  <div class="row d-flex">
    <div class="col-sm-2 border_right" style="text-align: left;">
      <p>Certifications:</p>
    </div>
    <div class="col-sm-10" style="text-align: center;">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Cert</th>
            <th>Vendor</th>
          </tr>
        </thead>
        <% @certifications.each do |cert| %>
        <tbody>
          <tr>
            <td><%= cert.certification.name %></td>
            <td><%= cert.certification.vendor %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>