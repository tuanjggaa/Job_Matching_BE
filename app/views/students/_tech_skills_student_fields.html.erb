<div class="nested-fields">
  <div class="row mt-2">
    <div class="col-sm-4">
      <%= f.association :tech_skill,
                        collection: @tech_skills,
                        label: false,
                        wrapper: false %>
    </div>

    <div class="col-sm-3">
      <%= f.input :level,
                  collection: [
                                ['Beginner', 'beginner'],
                                ['Intermediate', 'intermediate'],
                                ['Professional', 'professional']
                  ],
                  hint: 'From beginner to professional',
                  label: false %>
    </div>

    <div class="col-sm-3"></div>

    <div class="col-sm-2">
      <%= link_to_remove_association 'Remove', f, class: 'btn btn-danger float-right' %>
    </div>
  </div>
</div>